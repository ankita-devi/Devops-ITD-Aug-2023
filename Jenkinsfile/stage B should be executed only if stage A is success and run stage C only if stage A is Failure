pipeline{
    agent any
    stages{
        stage('A'){
           steps{
              script{
                try{
                    echo "we are in satge A"
                   
                }catch (Exception e){
                    echo 'stage A failed'
                    stageresult= "false"
                }
              }

            }
        } 
        
        stage('C'){
              when{
                expression{
                   stageresult== 'true'
                }
               }
            steps{
                  echo "running stage C as stage A succesed"
                 }
        }
       stage('B'){
               when{
                expression{
                   stageresult== 'false'
                }
               }
            steps{
                echo "running stage B as stage A failed"
            }
        }  
    }
}
