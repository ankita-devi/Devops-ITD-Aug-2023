pipeline{
    agent any
    stages{
        stage('A'){
           steps{
              script{
                try{
                    echo "we are in satge A"
                    sh 'exit 1'
                }catch (Exception e){
                    echo 'stage A failed'
                    testresult= "false"
                }
              }

            }
        } 
        stage('B'){
            steps{
                script{
                    if(testresult== false){
                        echo 'running stage B as stage A failed'
                    }

                }
            }
        }  
        stage('C'){
            steps{
                script{
                    if(testresult== true){
                        echo 'running stage C as stage A succesed'
                    }

                }
            }
        }   
    }
}
